 {{#each site.categories as |c|}} {{#if (is-collective c.name)}}
<tr class="input collective-selectors">
  <td class="label">
    <label for="{{ c.name }}">{{ c.name }}</label>
  </td>
  <td>
    {{input type="checkbox" name="debt-type" id=c.name change=(action "collectiveSelected")}}
  </td>
</tr>
{{/if}} {{/each}}

<tr class="input tds-field {{if isDebtor " tds-visible "}}">
  <td class="label">
    <label for="debt-amount">Debt Amount</label>
  </td>
  <td>
    {{input value=store.debtAmount id="debt-amount" name="debtamount"}}
    <span class='required'>*</span>
  </td>
</tr>
<tr class="input tds-field {{if isInSolidarity 'tds-visible'}}">
  <td class="label">
    <label for="solidarity-how-can-you-help">How can you help the debt syndicate?</label>
  </td>
  <td>
    {{input value=store.solidarity.howCanYouHelp type="text" name="solidarity-how-can-you-help" id="solidarity-how-can-you-help"}}
  </td>
</tr>
<tr class="input tds-field {{if isInSolidarity 'tds-visible'}}">
  <td class="label">
    <label for="solidarity-employment">Job Title</label>
  </td>
  <td>
    {{input value=store.solidarity.employment type="text" name="solidarity-employment" id="solidarity-employment"}}
  </td>
</tr>
<tr class="input tds-field {{if isInSolidarity 'tds-visible'}}">
  <td class="label">
    <label for="solidarity-skills">Skills/Competencies</label>
  </td>
  <td>
    {{input value=store.solidarity.skills type="text" name="solidarity-skils" id="solidarity-skills"}}
  </td>
</tr>
<tr class="input tds-field {{if isInSolidarity 'tds-visible'}}">
  <td class="label">
    <label for="phone">Phone Number</label>
  </td>
  <td>
    {{input value=store.solidarity.phone type="text" name="phone" id="phone"}}
  </td>
</tr>